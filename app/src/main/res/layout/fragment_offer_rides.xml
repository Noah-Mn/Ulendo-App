<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment_driver_home"
    android:id="@+id/driver_home"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/origin_24"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Choose your starting point"
                android:inputType="text"
                android:textColor="@color/black"
                android:textColorHint="#72000000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_marginTop="12dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/end_24"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Choose destination"
                android:textColorHint="#72000000"
                android:textColor="@color/black"
                android:inputType="text"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="185dp"
            android:layout_width="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/time_24"
                    android:layout_marginTop="10dp"
                    />
                <com.google.android.material.textfield.TextInputEditText
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Pickup time"
                    android:inputType="datetime"
                    android:textColor="@color/black"
                    android:textColorHint="#72000000"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/car_24"
                    android:layout_marginTop="10dp"
                    />
                <com.google.android.material.textfield.TextInputEditText
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="Car model &amp; available seats"
                    android:textColorHint="#72000000"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="245dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/objects_24"
                android:layout_marginTop="12dp"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Special instruction (eg pets, luggage)"
                android:textColorHint="#72000000"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/offer_rides_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="310dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:text="Offer"
            app:cornerRadius="20dp"
            />

</FrameLayout>